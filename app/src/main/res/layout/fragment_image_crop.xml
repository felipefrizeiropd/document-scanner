<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/holderImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar">

        <FrameLayout
            android:id="@+id/holderImageCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true" />

        </FrameLayout>

        <com.krobys.documentscanner.ui.components.polygon.PolygonView
            android:id="@+id/polygonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/zdc_x_small_padding"
        android:paddingBottom="@dimen/zdc_x_small_padding">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:src="@drawable/zdc_close" />

        <ImageView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:src="@drawable/zdc_tick_icon" />
    </LinearLayout>

</RelativeLayout>