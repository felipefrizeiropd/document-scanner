<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar">

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/zdc_x_small_padding"
        android:paddingBottom="@dimen/zdc_x_small_padding">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:src="@drawable/zdc_close" />

        <ImageView
            android:id="@+id/magicButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:padding="@dimen/zdc_tiny_padding"
            android:src="@drawable/zdc_magic_wand_icon" />

        <ImageView
            android:id="@+id/rotateButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:padding="@dimen/zdc_tiny_padding"
            android:src="@drawable/zdc_rotation_icon" />

        <ImageView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/zdc_image_view_icons_dimens"
            android:layout_weight="1"
            android:src="@drawable/zdc_tick_icon" />

    </LinearLayout>

    <com.krobys.documentscanner.ui.components.ProgressView
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
